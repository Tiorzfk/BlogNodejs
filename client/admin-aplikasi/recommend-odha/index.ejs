<% include ../partials/headeradmin %>
<% include ../partials/menuadmin %>
<!-- Data Tables -->
<link href="/backend/css/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet">
<link href="/backend/css/plugins/dataTables/dataTables.responsive.css" rel="stylesheet">
<link href="/backend/css/plugins/dataTables/dataTables.tableTools.min.css" rel="stylesheet">
 <!-- Toastr style -->
<link href="/backend/css/plugins/toastr/toastr.min.css" rel="stylesheet">

        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                       <h5>Halaman Tampil User Odha <small>Menampilkan User Odha untuk diverifikasi. </small></h5>
                    </div>
                    <div class="ibox-content">
                        <table class="table table-striped table-bordered table-hover dataTables-example" >
                            <thead>
                                <tr>
                                    <th width="20%">Sahabat Odha</th>
                                    <th width="15%">User</th>
                                    <th width="35%">Pesan</th>
                                    <th width="15%">Option</th>
                                </tr>
                            </thead>
                            <tbody>
                            <% odha.forEach(function(data) { %>
                                <tr>
                                    <td><%= data.perecommend %></td>
                                    <td><%= data.user %></td>
                                    <td><%= data.pesan %></td>
                                    <td><center><a href="/admin-aplikasi/odha/delete/" class="btn btn-info btn-xs" onClick="return confirm('Apakah anda yakin ingin menghapus user <%=data.nama%> ?')">Delete</a>
                                    <a href="/admin-aplikasi/recommend-odha/<%=data.id_recommend%>" class="btn btn-info btn-xs">Detail</a>
                                    <a href="/admin-aplikasi/recommend-odha/verifikasi/<%=data.id_recommend%>/<%=data.id_user%>" class="btn btn-info btn-xs" onClick="return confirm('Apakah anda yakin ingin mem-verifikasi user <%=data.nama%> ?')">Verifikasi</a>
                                    </center></td>
                                </tr>
                            <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
<% include ../partials/footeradmin %>
<!-- Data Tables -->
<script src="/backend/js/plugins/dataTables/jquery.dataTables.js"></script>
<script src="/backend/js/plugins/dataTables/dataTables.bootstrap.js"></script>
<script src="/backend/js/plugins/dataTables/dataTables.responsive.js"></script>
<script src="/backend/js/plugins/dataTables/dataTables.tableTools.min.js"></script>
<script src="/backend/js/plugins/toastr/toastr.min.js"></script>
<% for(var i in messages_success) { %>
    <script type="text/javascript">
        toastr.success('<%= messages_success[i] %>');
    </script>
<% } %>
<% for(var i in messages_errors) { %>
    <script type="text/javascript">
        toastr.error('<%= messages_errors[i] %>');
    </script>
<% } %>
<script>
    $(document).ready(function() {
        $('.dataTables-example').dataTable({
            responsive: true,
        });
    });
</script>
