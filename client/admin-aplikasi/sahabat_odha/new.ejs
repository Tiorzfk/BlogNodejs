<% include ../partials/headeradmin %>
<% include ../partials/menuadmin %>
 <!-- Toastr style -->
<link href="/backend/css/plugins/toastr/toastr.min.css" rel="stylesheet">

        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                       <h5>Halaman Form Tambah Sahabat Odha <small>Menampilkan Form untuk menambahkan sahabat odha. </small></h5>
                    </div>
                    <div class="ibox-content">
                        <form action="" method="post" class="form-horizontal" id="form">
                            <div class="form-group"><label class="col-sm-1 col-sm-offset-3 control-label">Nama</label>
                                <div class="col-sm-6"><input type="text" name="nama" class="form-control"></div>
                            </div>
                            <div class="form-group"><label class="col-sm-1 col-sm-offset-3 control-label">Email</label>
                                <div class="col-sm-6"><input type="text" name="email" class="form-control"></div>
                            </div>
                            <div class="form-group"><label class="col-sm-1 col-sm-offset-3 control-label">Password</label>
                                <div class="col-sm-6"><input type="password" name="password" class="form-control"></div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                <div class="col-sm-4 col-sm-offset-4">
                                    <button class="btn btn-white" type="reset">Reset</button>
                                    <button class="btn btn-primary" type="submit" id="save">Save</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
<% include ../partials/footeradmin %>
<!-- Toastr script -->
<script src="/backend/js/plugins/toastr/toastr.min.js"></script>
<!-- Button disabled when click -->
<script type="text/javascript" src="/backend/js/buttondisabled.js"></script>
<!-- Jquery Validate -->
<script src="/backend/js/plugins/validate/jquery.validate.min.js"></script>
<script src="http://jqueryvalidation.org/files/dist/additional-methods.min.js"></script>
<% for(var i in messages_success) { %>
    <script type="text/javascript">
        toastr.success('<%= messages_success[i] %>');
    </script>
<% } %>
<% for(var i in messages_errors) { %>
    <script type="text/javascript">
        toastr.error('<%= messages_error[i] %>');
    </script>
<% } %>
<script>

    $(document).ready(function(){
        $("#form").validate({
            rules: {
                nama: {
                    required: true
                },
                email: {
                    required: true
                }
            }
        });
    });
</script>
