<% include ../partials/headeradmin %>
<% include ../partials/menuadmin %>
<!-- Data Tables -->
<link href="/backend/css/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet">
<link href="/backend/css/plugins/dataTables/dataTables.responsive.css" rel="stylesheet">
<link href="/backend/css/plugins/dataTables/dataTables.tableTools.min.css" rel="stylesheet">
 <!-- Toastr style -->
<link href="/backend/css/plugins/toastr/toastr.min.css" rel="stylesheet">

        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                       <h5>Halaman Tampil User <small>Menampilkan User. </small></h5>
                    </div>
                    <div class="ibox-content">
                      <a href="/admin-aplikasi/sahabat-odha/add" class="btn btn-default btn-sm"><i class="fa fa-plus"></i> Tambah</a>
                        <table class="table table-striped table-bordered table-hover dataTables-example" >
                            <thead>
                                <tr>
                                    <th width="5%">Nama</th>
                                    <th width="5%">Email</th>
                                    <th width="5%">Telepon</th>
                                    <th width="5%">Pekerjaan</th>
                                    <th width="5%">Institusi</th>
                                    <th width="5%">Usia</th>
                                    <th width="5%">komunitas</th>
                                    <th width="20%">About</th>
                                    <th width="5%">Option</th>
                                </tr>
                            </thead>
                            <tbody>
                            <% saodha.forEach(function(data) { %>
                                <tr>
                                    <td><%= data.nama %></td>
                                    <td><%= data.email %></td>
                                    <td><%= data.telp%></td>
                                    <td><%= data.pekerjaan%></td>
                                    <td><%= data.institusi%></td>
                                    <td><%= data.usia%></td>
                                    <td><%= data.komunitas%></td>
                                    <td><%= data.about_sahabatodha%></td>
                                    <td><center><a href="/admin-aplikasi/sahabat-odha/delete/<%=data.id_user%>" class="btn btn-info btn-xs" onClick="return confirm('Apakah anda yakin ingin menghapus user <%=data.nama%> ?')">Delete</a></center>
                                      <center><a href="/admin-aplikasi/sahabat-odha/konfirmasi-sahabatBerbagi/<%=data.email%>/<%=data.id_user%>" class="btn btn-info btn-xs" onClick="return confirm('Apakah anda yakin ingin menkonfirmasi Sahabat Berbagi <%=data.nama%> ?')">Konfirmasi</a></center>
                                    </td>
                                </tr>
                            <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
<% include ../partials/footeradmin %>
<!-- Data Tables -->
<script src="/backend/js/plugins/dataTables/jquery.dataTables.js"></script>
<script src="/backend/js/plugins/dataTables/dataTables.bootstrap.js"></script>
<script src="/backend/js/plugins/dataTables/dataTables.responsive.js"></script>
<script src="/backend/js/plugins/dataTables/dataTables.tableTools.min.js"></script>
<script src="/backend/js/plugins/toastr/toastr.min.js"></script>
<% for(var i in messages_success) { %>
    <script type="text/javascript">
        toastr.success('<%= messages_success[i] %>');
    </script>
<% } %>
<% for(var i in messages_errors) { %>
    <script type="text/javascript">
        toastr.error('<%= messages_errors[i] %>');
    </script>
<% } %>
<script>
    $(document).ready(function() {
        $('.dataTables-example').dataTable({
            responsive: true,
        });
    });
</script>
