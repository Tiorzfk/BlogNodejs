<% include ../partials/headeradmin %>
<% include ../partials/menuadmin %>
<!-- Data Tables -->
<link href="/backend/css/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet">
<link href="/backend/css/plugins/dataTables/dataTables.responsive.css" rel="stylesheet">
<link href="/backend/css/plugins/dataTables/dataTables.tableTools.min.css" rel="stylesheet">
 <!-- Toastr style -->
<link href="/backend/css/plugins/toastr/toastr.min.css" rel="stylesheet">

        <div class="row">
            <% messages_errors.forEach(function(data) { %>
                <div class="alert alert-danger alert-dismissable">
                  <button aria-hidden="true" data-dismiss="alert" class="close" type="button">Ã—</button>
                      <% for(var i in data) { %>
                        <li><%= data[i]["message"] %></li>
                      <% } %>
                </div>
            <% }); %>
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                       <h5>Halaman Tampil Lokasi Obat <small>Menampilkan lokasi obat. </small></h5>                
                    </div>
                    <div class="ibox-content">
                    <a href="/admin-aplikasi/lokasi-obat/new" class="btn btn-default btn-sm"><i class="fa fa-plus"></i> Tambah</a>
                        <table width="70%" align="center" class="table table-striped table-bordered table-hover dataTables-example" >
                            <thead>
                                <tr>
                                    <th width="30%">Nama Lokasi</th>
                                    <th width="30%">Pengirim</th>
                                    <th width="20%">Option</th>
                                </tr>
                            </thead>
                            <tbody>
                            <% obat.forEach(function(data) { %>
                                <tr>
                                    <td><%= data.nama %></td>
                                    <td><%= data.pengirim %></td>  
                                    <td><center><a href="/admin-aplikasi/lokasi-obat/edit/<%=data.id_lokasi%>" class="btn btn-info btn-xs">Edit</a>
                                    <a href="/admin-aplikasi/lokasi-obat/detail/<%=data.id_lokasi%>" class="btn btn-info btn-xs">Lihat Lokasi</a>
                                    <a href="/admin-aplikasi/lokasi-obat/hapus/<%=data.id_lokasi%>" class="btn btn-info btn-xs" onClick="return confirm('Apakah anda yakin ingin menghapus lokasi <%=data.nama%> ?')">Delete</a></center></td>
                                </tr>
                            <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
<% include ../partials/footeradmin %>
<!-- Data Tables -->
<script src="/backend/js/plugins/dataTables/jquery.dataTables.js"></script>
<script src="/backend/js/plugins/dataTables/dataTables.bootstrap.js"></script>
<script src="/backend/js/plugins/dataTables/dataTables.responsive.js"></script>
<script src="/backend/js/plugins/dataTables/dataTables.tableTools.min.js"></script>
<script src="/backend/js/plugins/toastr/toastr.min.js"></script>
<% for(var i in messages_success) { %>
    <script type="text/javascript">
        toastr.success('<%= messages_success[i] %>');
    </script>
<% } %>
<script>
    $(document).ready(function() {
        $('.dataTables-example').dataTable({
            responsive: true,
        });
    });
</script>