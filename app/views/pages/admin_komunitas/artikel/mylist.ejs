<% include ../partials/headeradmin %>
<% include ../partials/menuadmin %>
<!-- Data Tables -->
<link href="/backend/css/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet">
<link href="/backend/css/plugins/dataTables/dataTables.responsive.css" rel="stylesheet">
<link href="/backend/css/plugins/dataTables/dataTables.tableTools.min.css" rel="stylesheet">
 <!-- Toastr style -->
<link href="/backend/css/plugins/toastr/toastr.min.css" rel="stylesheet">

<div id="page-wrapper" class="gray-bg">
    <div class="row border-bottom">
        </div>
            <div class="row wrapper border-bottom white-bg page-heading">
                <div class="col-sm-12">
                    <h2><%=title%> <font size="3px"><%=email%></font></h2>
                    <ol class="breadcrumb">
                        <li>
                            <a href="index.html">This is</a>
                        </li>
                        <li class="active">
                            <strong><%=title%></strong>
                        </li>
                    </ol>
                </div>
            </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                       <h5>Data Artikel <small>Menampilkan data artikel <%=email%>. </small></h5>                
                    </div>
                    <div class="ibox-content">
                        <table class="table table-striped table-bordered table-hover dataTables-example" >
                            <thead>
                                <tr>
                                    <th width="20%">Judul</th>
                                    <th width="55%">Isi</th>
                                    <th width="10%">Status</th>
                                    <th>Option</th>
                                </tr>
                            </thead>
                            <tbody>
                            <% articles.forEach(function(data) { %>
                                <tr>
                                    <td><%= data.judul %></td>
                                    <td><%= data.deskripsi %></td>
                                    <% if(data.status==="0"){%>
                                        <td><center><small class="btn btn-danger btn-xs" disabled>Pending...</small></center></td>
                                    <% } else { %>   
                                        <td><center><small class="btn btn-success btn-xs" disabled>Verificated</small></center></td>     
                                    <% } %>
                                    <td><a href="/admin-komunitas/my-artikel/edit/<%=data.id_artikel%>" class="btn btn-info btn-xs">Edit</a><a href="/admin-komunitas/my-artikel/detail/<%=data.id_artikel%>" class="btn btn-info btn-xs">Detail</a><a href="/admin-komunitas/my-artikel/delete/<%=data.id_artikel%>" class="btn btn-info btn-xs" data-method="delete">Delete</a></td>
                                </tr>
                            <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
<% include ../partials/footeradmin %>
<!-- Data Tables -->
<script src="/backend/js/plugins/dataTables/jquery.dataTables.js"></script>
<script src="/backend/js/plugins/dataTables/dataTables.bootstrap.js"></script>
<script src="/backend/js/plugins/dataTables/dataTables.responsive.js"></script>
<script src="/backend/js/plugins/dataTables/dataTables.tableTools.min.js"></script>
<script>
    $(document).ready(function() {
        $('.dataTables-example').dataTable({
            responsive: true,
        });
    });
</script>