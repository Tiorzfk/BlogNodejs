<% include ../partials/headeradmin %>
<% include ../partials/menuadmin %>
<!-- Data Tables -->
<link href="/backend/css/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet">
<link href="/backend/css/plugins/dataTables/dataTables.responsive.css" rel="stylesheet">
<link href="/backend/css/plugins/dataTables/dataTables.tableTools.min.css" rel="stylesheet">
 <!-- Toastr style -->
<link href="/backend/css/plugins/toastr/toastr.min.css" rel="stylesheet">

<div id="page-wrapper" class="gray-bg">
    <div class="row border-bottom">
        </div>
            <div class="row wrapper border-bottom white-bg page-heading">
                <div class="col-sm-4">
                    <h2><%=title%></h2>
                    <ol class="breadcrumb">
                        <li>
                            <a href="index.html">This is</a>
                        </li>
                        <li class="active">
                            <strong><%=title%></strong>
                        </li>
                    </ol>
                </div>
            </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                       <h5>Halaman Tampil Artikel <small>Menampilkan semua artikel. </small></h5>                
                    </div>
                    <div class="ibox-content">
                        <table class="table table-striped table-bordered table-hover dataTables-example" >
                            <thead>
                                <tr>
                                    <th width="30%">Judul</th>
                                    <th>Isi</th>
                                    <th width="10%">Status</th>
                                    <th width="15%">Option</th>
                                </tr>
                            </thead>
                            <tbody>
                            <% articles.forEach(function(data) { %>
                                <tr>
                                    <td><%= data.judul %></td>
                                    <td><%= data.deskripsi %>.</td>
                                    <% if(data.status==="0"){%>
                                        <td><center><small class="btn btn-danger btn-xs" disabled>Pending...</small></center></td>
                                    <% } else { %>   
                                        <td><center><small class="btn btn-success btn-xs" disabled>Published</small></center></td>     
                                    <% } %>          
                                    <td><center><a href="/admin-komunitas/artikel/detail/<%=data.id_posting%>" class="btn btn-info btn-xs">Detail</a><a href="/admin-komunitas/artikel/edit/<%=data.id_posting%>" class="btn btn-info btn-xs">Edit</a><a href="/admin-komunitas/artikel/delete/<%=data.id_posting%>" class="btn btn-info btn-xs">Delete</a></center></td>
                                </tr>
                            <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
<% include ../partials/footeradmin %>
<!-- Data Tables -->
<script src="/backend/js/plugins/dataTables/jquery.dataTables.js"></script>
<script src="/backend/js/plugins/dataTables/dataTables.bootstrap.js"></script>
<script src="/backend/js/plugins/dataTables/dataTables.responsive.js"></script>
<script src="/backend/js/plugins/dataTables/dataTables.tableTools.min.js"></script>
<!-- Toastr script -->
<script src="/backend/js/plugins/toastr/toastr.min.js"></script>
<% for(var i in messages_success) { %>
    <script type="text/javascript">
        toastr.success('<%= messages_success[i] %>');
    </script>
<% } %>
<script>
    $(document).ready(function() {
        $('.dataTables-example').dataTable({
            responsive: true,
        });
    });
</script>