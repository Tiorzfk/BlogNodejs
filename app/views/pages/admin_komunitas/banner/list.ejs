<% include ../partials/headeradmin %>
<% include ../partials/menuadmin %>
<!-- Data Tables -->
<link href="/backend/css/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet">
<link href="/backend/css/plugins/dataTables/dataTables.responsive.css" rel="stylesheet">
<link href="/backend/css/plugins/dataTables/dataTables.tableTools.min.css" rel="stylesheet">
 <!-- Toastr style -->
<link href="/backend/css/plugins/toastr/toastr.min.css" rel="stylesheet">

<div id="page-wrapper" class="gray-bg">
    <div class="row border-bottom">
        </div>
            <div class="row wrapper border-bottom white-bg page-heading">
                <div class="col-sm-12">
                    <h2><%=title%> <font size="3px"><%=email%></font></h2>
                    <ol class="breadcrumb">
                        <li>
                            <a href="index.html">This is</a>
                        </li>
                        <li class="active">
                            <strong><%=title%></strong>
                        </li>
                    </ol>
                </div>
            </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                       <h5>Data Banner <small>Menampilkan data Banner <%=email%>. </small></h5>                
                    </div>
                    <div class="ibox-content">
                        <table class="table table-striped table-bordered table-hover dataTables-example" >
                            <thead>
                                <tr>
                                    <th width="30%">Nama Banner</th>
                                    <th width="55%">Banner</th>
                                    <th>Option</th>
                                </tr>
                            </thead>
                            <tbody>
                            <% banner.forEach(function(data) { %>
                                <tr>
                                    <td><%= data.nama_banner %></td>
                                    <td><img src="/uploads/banner/<%=data.banner_img%>" style="width:200px;height:100px"></td>
                                    <td><a href="/manage/banner/edit/<%=data.id%>" class="btn btn-info btn-xs">Edit</a><a href="/manage/banner/delete/<%=data.id%>" class="btn btn-info btn-xs" data-method="delete">Delete</a></td>
                                </tr>
                            <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
<% include ../partials/footeradmin %>
<!-- Data Tables -->
<script src="/backend/js/plugins/dataTables/jquery.dataTables.js"></script>
<script src="/backend/js/plugins/dataTables/dataTables.bootstrap.js"></script>
<script src="/backend/js/plugins/dataTables/dataTables.responsive.js"></script>
<script src="/backend/js/plugins/dataTables/dataTables.tableTools.min.js"></script>
<script>
    $(document).ready(function() {
        $('.dataTables-example').dataTable({
            responsive: true,
        });
    });
</script>
<!-- Toastr script -->
<script src="/backend/js/plugins/toastr/toastr.min.js"></script>
<% for(var i in messages) { %>
    <script type="text/javascript">
        toastr.success('<%= messages[i] %>')
    </script>
<% } %>