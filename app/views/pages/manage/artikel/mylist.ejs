<% include ../../../partials/headeradmin %>
<% include ../../../partials/menuadmin %>
<link href="/backend/css/plugins/summernote/summernote.css" rel="stylesheet">
<link href="/backend/css/plugins/summernote/summernote-bs3.css" rel="stylesheet">
<!-- Data Tables -->
<link href="/backend/css/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet">
<link href="/backend/css/plugins/dataTables/dataTables.responsive.css" rel="stylesheet">
<link href="/backend/css/plugins/dataTables/dataTables.tableTools.min.css" rel="stylesheet">
 <!-- Toastr style -->
<link href="/backend/css/plugins/toastr/toastr.min.css" rel="stylesheet">

<div id="page-wrapper" class="gray-bg">
    <div class="row border-bottom">
        </div>
            <div class="row wrapper border-bottom white-bg page-heading">
                <div class="col-sm-12">
                    <h2><%=title%> <font size="3px"><%=email%></font></h2>
                    <ol class="breadcrumb">
                        <li>
                            <a href="index.html">This is</a>
                        </li>
                        <li class="active">
                            <strong><%=title%></strong>
                        </li>
                    </ol>
                </div>
            </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                       <h5>Data Artikel <small>Menampilkan data artikel <%=email%>. </small></h5>                
                    </div>
                    <div class="ibox-content">
                        <table class="table table-striped table-bordered table-hover dataTables-example" >
                            <thead>
                                <tr>
                                    <th width="30%">Judul</th>
                                    <th width="55%">Isi</th>
                                    <th>Option</th>
                                </tr>
                            </thead>
                            <tbody>
                            <% articles.forEach(function(data) { %>
                                <tr>
                                    <td><%= data.judul %></td>
                                    <td><%= data.showmore %></td>
                                    <input type="hidden" name="id" value="<%=data.id%>">
                                    <td><a href="/manage/my-artikel/edit/<%=data.id%>" class="btn btn-info btn-xs">Edit</a><a href="/manage/my-artikel/detail/<%=data.id%>" class="btn btn-info btn-xs">Detail</a><a href="/manage/my-artikel/delete/<%=data.id%>" class="btn btn-info btn-xs" data-method="delete">Delete</a></td>
                                </tr>
                            <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
<% include ../../../partials/footeradmin %>
<script src="/backend/js/plugins/summernote/summernote.min.js"></script>
<!-- Data Tables -->
<script src="/backend/js/plugins/dataTables/jquery.dataTables.js"></script>
<script src="/backend/js/plugins/dataTables/dataTables.bootstrap.js"></script>
<script src="/backend/js/plugins/dataTables/dataTables.responsive.js"></script>
<script src="/backend/js/plugins/dataTables/dataTables.tableTools.min.js"></script>
<script>
    $(document).ready(function() {
        $('.dataTables-example').dataTable({
            responsive: true,
        });
    });
</script>
<!-- Toastr script -->
<script src="/backend/js/plugins/toastr/toastr.min.js"></script>
<% for(var i in messages) { %>
    <script type="text/javascript">
        toastr.success('<%= messages[i] %>')
    </script>
<% } %>
<script>
    $(document).ready(function(){
        $('.summernote').summernote();
    });
</script>